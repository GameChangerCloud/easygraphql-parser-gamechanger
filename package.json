{
  "name": "easygraphql-parser-gamechanger",
  "version": "1.0.6",
  "description": "Parse GraphQL Schema adapted to GameChanger",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "commonjs",
  "files": [
    "/dist"
  ],
  "scripts": {
    "test": "mocha -r ts-node/register test/**/**/*.spec.ts test/**/*.spec.ts",
    "test:coverage": "nyc npm run test",
    "prettier:check": "prettier --write './{lib,test,utils}/**/*.{js,graphql}'",
    "prettier:format": "prettier --write './{lib,test,utils}/**/*.{js,graphql}'",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "start": "tsc -w & tscp -w",
    "build": " tscp && tsc "
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "lib/**/!(*.spec.*).[tj]s?(x)"
    ],
    "exclude": [
      "test/**/*.*"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "keywords": [
    "nodejs",
    "graphql",
    "parser",
    "schema"
  ],
  "homepage": "https://github.com/GameChangerCloud/easygraphql-parser-gamechanger",
  "author": "GameChanger (https://github.com/GameChangerCloud)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GameChangerCloud/easygraphql-parser-gamechanger.git"
  },
  "bugs": {
    "url": "https://github.com/EasyGraphQL/easygraphql-parser/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/merge": "^8.3.14",
    "chance": "^1.1.8",
    "describe": "^1.2.0",
    "easygraphql-parser": "^0.0.15",
    "fs": "0.0.1-security",
    "graphql": "^15.8.0",
    "pluralize": "^8.0.0",
    "tscp": "^1.0.0",
    "typescript": "^4.5.4",
    "typescript-cp": "^0.1.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.9",
    "chai": "^4.3.4",
    "coveralls": "^3.0.2",
    "husky": "^3.0.0",
    "mocha": "^6.1.4",
    "nyc": "^15.1.0",
    "prettier": "^1.18.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
